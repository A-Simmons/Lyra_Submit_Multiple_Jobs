#!/bin/bash -l
#

#### load R module
module load R/3.2.4_gcc

#### cd to working directory
cd $PBS_O_WORKDIR

#### run R

args=("$@")
ELEMENTS=${#args[@]}
argString=""
for (( i=0;i<$ELEMENTS;i++)); do
    argString=$argString" "${args[${i}]}
done
argString="--args$argString"

R CMD BATCH --no-save --no-restore $argString simpleFunction.R $PBS_JOBNAME.out
echo ${args[@]}
echo $@
